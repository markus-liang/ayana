@model Web.Models.Barang

@{
    ViewBag.Title = "Create";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Barang</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.JenisBarangID, "JenisBarang")
        </div>
        <div class="editor-field">
            @Html.DropDownList("JenisBarangID", null, new { })
            @Html.ValidationMessageFor(model => model.JenisBarangID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Nama)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Nama)
            @Html.ValidationMessageFor(model => model.Nama)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.LokasiID, "Lokasi")
        </div>
        <div class="editor-field">
            @Html.DropDownList("LokasiID", null, new { })
            @Html.ValidationMessageFor(model => model.LokasiID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.HargaGrosir)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.HargaGrosir, new { @class="numeric", @type="number", @min="0", @step="1000" })
            @Html.ValidationMessageFor(model => model.HargaGrosir)
        </div>

        <table class="tabelpolos">
            <tr>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.HargaMinimum)
                    </div>
                    <div class="editor-field">
                        @Html.TextBoxFor(model => model.HargaMinimum, new { @class="numeric", @type="number", @min="0", @step="1000" })
                        @Html.ValidationMessageFor(model => model.HargaMinimum)
                    </div>
                </td>
                <td> <br /><br />- </td>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.HargaPriceList)
                    </div>
                    <div class="editor-field">
                        @Html.TextBoxFor(model => model.HargaPriceList, new { @class="numeric", @type="number", @min="0", @step="1000" })
                        @Html.ValidationMessageFor(model => model.HargaPriceList)
                    </div>
                </td>
            </tr>
        </table>

        <div class="editor-label">
            @Html.LabelFor(model => model.Keterangan)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Keterangan)
            @Html.ValidationMessageFor(model => model.Keterangan)
        </div>

        <div class="editor-field">
            @Html.CheckBoxFor(model => model.IsNonAktif) @Html.LabelFor(model => model.IsNonAktif)
            @Html.ValidationMessageFor(model => model.IsNonAktif)
        </div>

        <p>
            <input type="submit" value="Create" class="layer" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index", new { @page=1 }, new { @class="layer" })
</div>
