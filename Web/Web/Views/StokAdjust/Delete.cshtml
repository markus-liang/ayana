@model Web.Models.StokAdjust

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>StokAdjust</legend>

    <div class="display-label">Tanggal</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Tanggal)
    </div>

    <div class="display-label">Username</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Username)
    </div>

    <div class="display-label">Keterangan</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Keterangan)
    </div>
</fieldset>
<script>
    function ya_click() {
        $("#submit").click();
    }
    function tidak_click() {
        window.location = "/StokAdjust/Index?page=1";
    }
</script>
@using (Html.BeginForm()) {
    <p>
        <input type="button" value="Ya" style="width:80px;" onclick="ya_click()"/>&nbsp;&nbsp;
        <input type="button" value="Tidak" style="width:80px;" onclick="tidak_click()" class="layer" />
        <input type="submit" value="Ya" style="width:80px;display:none;" id="submit" class="layer" />
    </p>
}
