@model Web.Models.KasKecil

@{
    ViewBag.Title = "Day Opening";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Nilai awal kas kecil</legend>

        <div class="editor-label">
            <br />
            Kas awal wajib diisi sebelum memulai periode baru!
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Total, new { @class="numeric" })
            @Html.ValidationMessageFor(model => model.Total)
        </div>

        <p>
            <input type="submit" value="Input" class="layer" />
        </p>
    </fieldset>
}